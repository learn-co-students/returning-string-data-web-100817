<% @posts.each do |post| %>
  <%= render partial: "post", locals: {post: post} %>
<% end %>

<script type="text/javascript">
  $ (function () {
    $(".js-more").on('click', function () {
      const id = $(this).data("id");
      $.get("/posts/" + id + "/body", function (data) {
        // alert(data);
        $("#body-" + id).text(data);
      })
    })
  })

  // document.addEventListener('DOMContentLoaded', function() {
